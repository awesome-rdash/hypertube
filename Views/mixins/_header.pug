mixin header()
	br
	.row
		a.col-md-2.offset-md-1.center-xs(href="/" style="color:inherit; text-decoration: none;")
			span(style="color: red;font-size: 30px;") HyperTube
		if (user)
			.col-xs-3.hidden-md-up
			.input-group.offset-md-5.col-md-2.col-xs-6#userFound
				.row
					.col-xs-12
						input.form-control#searchUserValue(name="search" placeholder="Search")
					.col-xs-12
						#userFoundList.row(style="position: absolute; z-index: 1000;")
			span.col-md-2.center-xs(style="color: grey;font-size: 14px;")
				.dropdown
					button.btn.btn-default.dropdown-toggle#dropdownMenu1(type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true") #{user.username}
					ul.dropdown-menu(aria-labelledby="dropdownMenu1")
						li.dropdown-header
							hr
						li
							a#myAccBtn(href="#" title="Lien 1") Mon compte
						li
							a(href="#" title="Lien 1") Mes films
						li.dropdown-divider
						li
							a(href="/logout" title="Lien 1") Deconnexion
	br
	br
