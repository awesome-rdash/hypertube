mixin search()
	#search
		.row
			.col-8.col-md-10.col-xl-5.offset-xl-3
					input.form-control#searchValue(name="search" placeholder="Search")
			.col-4.col-md-2.col-xl-1
				button.btn.btn-style#searchBtn(style="width: 100%; height: 100%;")
					span.glyphicon.glyphicon-search
		br
		.row
			.col-12.col-xl-6.offset-xl-3
					label.form-control-label(for="rating" style="color: red;" tkey="rating")  :&nbsp;
					br
					span(style="color: red;")
						b(style="float: left") 0
						b(style="float: right") 10
					input(id="rating" name="rate" type="range" min="0" max="10" step="0.1" value="3.3")
					output(for="rate" onforminput="value = rate.valueAsNumber;")
		br
		.row
			.col-4.col-xl-2.offset-xl-3
					label.form-control-label(for="catagory" style="color: red;" tkey="category")  :
					br
					select.custom-select#categoryValue(name="category")
						option(value="") All
						option(value="Action") Action
						option(value="Adventure") Adventure
						option(value="Animation") Animation
						option(value="Biography") Biography
						option(value="Comedy") Comedy
						option(value="Crime") Crime
						option(value="Documentary") Documentary
						option(value="Drama") Drama
						option(value="Family") Family
						option(value="Fantasy") Fantasy
						option(value="Film-noir") Film-Noir
						option(value="Game-show") Game-Show
						option(value="History") History
						option(value="Horror") Horror
						option(value="Music") Music
						option(value="Musical") Musical
						option(value="Mystery") Mystery
						option(value="News") News
						option(value="Reality-tv") Reality-TV
						option(value="Romance") Romance
						option(value="Sci-fi") Sci-Fi
						option(value="Sport") Sport
						option(value="Talk-show") Talk-Show
						option(value="Thriller") Thriller
						option(value="War") War
						option(value="Western") Western
			.col-4.col-xl-2
					label.form-control-label(for="orderBy" style="color: red;" tkey="orderBy")  :
					br
					select.custom-select#orderByValue(name="orderBy")
						option(value="title") Alphabetical
						option(value="year") Realease year
						option(value="rating") Rating
						option(value="length") Duration
